#!/bin/bash

PREFIX=/afs/cern.ch/work/y/ylevinse/python27

# install python
PYVER_MAJOR=2.7
PYVER_MINOR=2

. build_inits

. build_functions

download_files

install_python

cd $BUILD_DIR
. ${PREFIX}/bin/activate


python ez_setup.py
python ez_setup.py -U setuptools

#checking:
echo "Using python binary: `which python`"
echo "Using easy_install: `which easy_install`"

# We need some additional libraries in a more
# modern version..
install_tcltk

# installing other modules..
cd $BUILD_DIR
install_numpy

cd $BUILD_DIR
easy_installs

cd $BUILD_DIR
install_h5py

# Finally, we install pymad.. because I want to ;)
cd $BUILD_DIR
install_pymad

